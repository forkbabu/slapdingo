<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="end" android:layout_gravity="center_horizontal" android:orientation="vertical" android:background="@drawable/dialog_bg" android:padding="20dp" android:layout_width="330dp" android:layout_height="wrap_content">
    <TextView android:textSize="20sp" android:textColor="#212121" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="Enter Document Name:"/>
    <EditText android:textSize="15sp" android:textColor="#212121" android:gravity="top|left|center_vertical|center_horizontal|center|start" android:id="@+id/enter_name" android:padding="10dp" android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginTop="10dp" android:maxLines="6" android:maxLength="2000" android:inputType="none|text|textCapSentences|textMultiLine"/>
    <LinearLayout android:gravity="end" android:orientation="horizontal" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="17sp" android:textColor="@color/colorAccent" android:gravity="end" android:layout_gravity="end" android:id="@+id/cancel" android:paddingLeft="10dp" android:paddingTop="8dp" android:paddingRight="10dp" android:paddingBottom="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Cancel"/>
        <TextView android:textSize="17sp" android:textColor="@color/colorAccent" android:gravity="end" android:id="@+id/update" android:paddingLeft="10dp" android:paddingTop="8dp" android:paddingRight="10dp" android:paddingBottom="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Done"/>
    </LinearLayout>
</LinearLayout>

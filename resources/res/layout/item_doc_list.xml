<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="120dp">
    <LinearLayout android:id="@+id/doc_layout" android:background="@drawable/custom_ripple_list" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="match_parent">
        <androidx.cardview.widget.CardView android:layout_width="125dp" android:layout_height="match_parent" android:layout_marginLeft="5dp" android:layout_marginTop="10dp" android:layout_marginRight="5dp" android:layout_marginBottom="10dp" android:layout_marginStart="10dp" android:layout_marginEnd="5dp" app:cardCornerRadius="4dp" app:cardElevation="0dp">
            <ImageView android:id="@+id/doc_image" android:layout_width="125dp" android:layout_height="90dp" android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginEnd="10dp">
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="15sp" android:textColor="#212121" android:ellipsize="end" android:id="@+id/doc_name" android:paddingLeft="10dp" android:paddingTop="15dp" android:paddingRight="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Document Name" android:maxLines="2"/>
                <TextView android:textSize="12sp" android:id="@+id/doc_date" android:paddingLeft="10dp" android:paddingTop="5dp" android:paddingRight="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="2 days ago"/>
            </LinearLayout>
            <LinearLayout android:gravity="end" android:layout_width="match_parent" android:layout_height="match_parent">
                <ImageView android:layout_gravity="bottom|right|center_vertical|center_horizontal|center|end" android:id="@+id/delete" android:padding="5dp" android:layout_width="35dp" android:layout_height="35dp" android:layout_margin="3dp" android:src="@drawable/ic_baseline_delete_outline_24" android:tint="#212121"/>
                <ImageView android:layout_gravity="bottom|right|center_vertical|center_horizontal|center|end" android:id="@+id/share" android:padding="5dp" android:layout_width="35dp" android:layout_height="35dp" android:layout_margin="3dp" android:src="@drawable/ic_share_lightgrey_24dp" android:tint="#212121"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View android:background="#e5e5e5" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:layout_alignParentBottom="true"/>
</RelativeLayout>

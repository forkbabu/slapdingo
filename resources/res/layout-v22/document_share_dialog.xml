<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@drawable/dialog_background" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="20sp" android:textColor="#212121" android:paddingLeft="25dp" android:paddingTop="20dp" android:paddingRight="25dp" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="PDF Created:" android:fontFamily="@font/oxygen_ex_bold" android:paddingHorizontal="25dp"/>
            <ImageView android:textSize="15sp" android:textColor="#212121" android:id="@+id/close" android:paddingLeft="18dp" android:paddingTop="20dp" android:paddingRight="18dp" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_close_black_24dp" android:layout_centerVertical="true" android:fontFamily="@font/oxygen_ex_bold" android:layout_alignParentEnd="true" android:paddingHorizontal="18dp"/>
        </RelativeLayout>
        <View android:background="#dcdcdc" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:layout_marginHorizontal="15dp"/>
        <LinearLayout android:orientation="vertical" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingVertical="5dp">
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/view" android:background="@drawable/custom_ripple_white_stroke_dialog" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:layout_marginHorizontal="15dp">
                <ImageView android:padding="12dp" android:layout_width="55dp" android:layout_height="55dp" android:src="@drawable/ic_baseline_remove_red_eye_24" android:tint="@color/colorAccent"/>
                <TextView android:textSize="15sp" android:textColor="#212121" android:gravity="start" android:paddingLeft="15dp" android:paddingTop="6dp" android:paddingRight="15dp" android:paddingBottom="6dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="View PDF" android:paddingHorizontal="15dp" android:paddingVertical="6dp"/>
            </LinearLayout>
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/share" android:background="@drawable/custom_ripple_white_stroke_dialog" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:layout_marginHorizontal="15dp">
                <ImageView android:padding="12dp" android:layout_width="55dp" android:layout_height="55dp" android:src="@drawable/ic_share_lightgrey_24dp" android:tint="@color/colorAccent"/>
                <TextView android:textSize="15sp" android:textColor="#212121" android:gravity="start" android:paddingLeft="15dp" android:paddingTop="6dp" android:paddingRight="15dp" android:paddingBottom="6dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Share PDF" android:paddingHorizontal="15dp" android:paddingVertical="6dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

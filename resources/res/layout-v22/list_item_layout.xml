<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center_vertical" android:background="@drawable/custom_ripple_list" android:paddingTop="20dp" android:paddingBottom="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:gravity="top" android:id="@+id/img_layout" android:layout_width="wrap_content" android:layout_height="match_parent">
        <TextView android:textSize="20dp" android:textColor="#fff" android:gravity="center" android:id="@+id/bullet_view" android:background="@drawable/bullet_bg" android:layout_width="43dp" android:layout_height="43dp" android:layout_marginLeft="12dp" android:layout_marginRight="12dp" android:text="B" android:layout_marginHorizontal="12dp"/>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/list_item" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <RelativeLayout android:gravity="center_vertical" android:id="@+id/text_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginEnd="39dp">
                <TextView android:textColor="#212121" android:ellipsize="end" android:id="@+id/text_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="text" android:maxLines="4" android:minLines="3" android:layout_centerVertical="true" android:paddingStart="0dp" android:paddingEnd="8dp"/>
            </RelativeLayout>
            <RelativeLayout android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginStart="-39dp" android:layout_toEndOf="@+id/text_layout">
                <ImageButton android:id="@+id/sharecard" android:background="@drawable/custom_ripple_transparent" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_share_grey_24dp" android:tint="#212121" android:paddingStart="2dp" android:paddingEnd="12dp" android:paddingVertical="5dp"/>
            </RelativeLayout>
        </RelativeLayout>
        <TextView android:textSize="12dp" android:gravity="end" android:id="@+id/date_text" android:paddingLeft="12dp" android:paddingRight="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Date" android:paddingHorizontal="12dp"/>
    </LinearLayout>
</LinearLayout>

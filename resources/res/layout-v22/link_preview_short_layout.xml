<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:gravity="center" android:orientation="vertical" android:id="@+id/rich_link_card" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp" android:elevation="2dp" app:cardCornerRadius="3dp">
    <TextView android:autoLink="web" android:id="@+id/rich_link_original_url" android:paddingTop="5dp" android:paddingBottom="5dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <LinearLayout android:orientation="horizontal" android:background="@drawable/bg_telegram" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:paddingLeft="5dp" android:paddingRight="5dp" android:paddingBottom="4dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:paddingHorizontal="5dp">
            <TextView android:textSize="12sp" android:textStyle="bold" android:textColor="@color/colorAccent" android:ellipsize="end" android:id="@+id/rich_link_url" android:padding="2dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="1"/>
            <TextView android:textSize="14dp" android:textStyle="bold" android:textColor="#212121" android:ellipsize="end" android:id="@+id/rich_link_title" android:paddingLeft="2dp" android:paddingRight="2dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="1" android:paddingHorizontal="2dp"/>
            <TextView android:textSize="14dp" android:textColor="#626262" android:ellipsize="end" android:id="@+id/rich_link_desp" android:paddingLeft="2dp" android:paddingRight="2dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="3" android:paddingHorizontal="2dp"/>
        </LinearLayout>
        <ImageView android:id="@+id/rich_link_image" android:layout_width="80dp" android:layout_height="match_parent" android:scaleType="centerCrop" android:adjustViewBounds="true" android:minHeight="180dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>

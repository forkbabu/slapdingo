<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_gravity="center" android:orientation="vertical" android:background="@drawable/dialog_bg" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="300dp" android:layout_height="wrap_content" android:elevation="20dp" android:paddingVertical="5dp">
    <TextView android:textSize="20sp" android:textColor="#212121" android:paddingLeft="25dp" android:paddingTop="5dp" android:paddingRight="25dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginBottom="10dp" android:text="File Name :" android:paddingHorizontal="25dp" android:paddingVertical="5dp"/>
    <LinearLayout android:gravity="center_horizontal" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <EditText android:textSize="15sp" android:id="@+id/fname" android:paddingLeft="5dp" android:paddingRight="5dp" android:layout_width="240dp" android:layout_height="wrap_content" android:layout_marginEnd="1dp" android:paddingHorizontal="5dp"/>
        <TextView android:textSize="15sp" android:id="@+id/extension" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=".pdf" android:paddingStart="5dp"/>
    </LinearLayout>
    <RelativeLayout android:gravity="right|center_vertical|center_horizontal|center|end" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="20dp" android:paddingVertical="5dp">
        <TextView android:textSize="17sp" android:textColor="@color/colorAccent" android:gravity="center" android:id="@+id/save" android:background="#fff" android:paddingLeft="15dp" android:paddingTop="8dp" android:paddingRight="15dp" android:paddingBottom="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Save" android:textAllCaps="false" android:layout_marginEnd="10dp" android:paddingHorizontal="15dp" android:paddingVertical="8dp"/>
    </RelativeLayout>
</LinearLayout>
